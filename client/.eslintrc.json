{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "keyword-spacing": "error",
      "linebreak-style": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "off",
      "space-before-blocks": "error",
      "space-before-function-paren": "error",
      "no-undef": "off",
      "no-unused-vars": "warn"
    }
}
